<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary"
    android:orientation="vertical">

    <include layout="@layout/layout_title_primary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_white"
        android:layout_marginTop="@dimen/default_margin_tnb">

        <LinearLayout
            android:id="@+id/layout_manage"
            style="@style/LL_Item">

            <TextView
                style="@style/TextView_Subtitle_Black_Weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pay_by_others_manage"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_subtitle"
                />

            <ImageView style="@style/Right_Arrow"/>

        </LinearLayout>

        <View
            style="@style/Divide_Horizontal"
            />

        <LinearLayout
            android:id="@+id/layout_record"
            style="@style/LL_Item"
            >

            <TextView
                style="@style/TextView_Subtitle_Black_Weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pay_by_others_record"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_subtitle"
                />

            <ImageView style="@style/Right_Arrow"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
