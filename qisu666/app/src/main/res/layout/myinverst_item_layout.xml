<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginRight="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/tx_radio"
        android:layout_height="140dp">
        <RelativeLayout
            android:id="@+id/re_left"
            android:background="@drawable/white_shape"
            android:layout_width="132dp"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="fitXY"
                android:layout_marginTop="25dp"
                android:id="@+id/car_img"
                android:layout_centerHorizontal="true"
                android:layout_width="110dp"
                android:layout_height="43dp" />
            <TextView
                android:id="@+id/tx_brand"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/sp_14"
                android:text="品牌"
                android:textColor="@color/new_text_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="18dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/re_left"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tx_producttype"
                android:background="@drawable/green_shap"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="投资中"
                android:textColor="@color/new_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="13sp"
                    android:text="合同状态："
                    android:textColor="@color/new_text_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tx_contra_statu"
                    android:layout_marginLeft="2dp"
                    android:textSize="13sp"
                    android:textColor="@color/new_text_gray"
                    android:text="1000元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="13sp"
                    android:text="认购时间："
                    android:textColor="@color/new_text_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tx_time"
                    android:layout_marginLeft="2dp"
                    android:textSize="13sp"
                    android:textColor="@color/new_text_gray"
                    android:text="2018-05-23 12:22:22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/first_linear"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="13sp"
                    android:text="分红到帐时间："
                    android:textColor="@color/new_text_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tx_firstPhaseTime"
                    android:layout_marginLeft="2dp"
                    android:textSize="13sp"
                    android:textColor="@color/new_text_gray"
                    android:text="2018-05-23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="13sp"
                    android:text="合同解除时间："
                    android:textColor="@color/new_text_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tx_contractExpiresTime"
                    android:layout_marginLeft="2dp"
                    android:textSize="13sp"
                    android:textColor="@color/new_text_gray"
                    android:text="2018-05-23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_40"
            android:background="@mipmap/gr_16"
            android:layout_height="@dimen/dp_40">
            <TextView
                android:id="@+id/tx_position"
                android:textColor="@color/main_background"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>