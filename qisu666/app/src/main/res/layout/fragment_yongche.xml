<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45dp"
        android:layout_marginRight="@dimen/dimen_11dp"
        android:layout_marginLeft="@dimen/dimen_11dp"
        android:background="@drawable/linear_shape"

        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_completed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_completed_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:src="@mipmap/yiwanc2" />

            <TextView
                android:id="@+id/tv_completed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_7dp"
                android:gravity="center"
                android:text="已完成"
                android:textColor="@color/new_primary"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_completed_sanjiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_7dp"
                android:paddingTop="2dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/xiala2" />
        </LinearLayout>

        <View
            android:background="@color/bianxian"
            android:layout_width="1dp"
            android:layout_height="30dp"/>

        <LinearLayout
            android:id="@+id/ll_incomplete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_incomplete_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:src="@mipmap/wwc1" />

            <TextView
                android:id="@+id/tv_incomplete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_7dp"
                android:gravity="center"
                android:text="进行中"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_incomplete_sanjiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_7dp"
                android:paddingTop="2dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/xiala1" />
        </LinearLayout>

        <View
            android:background="@color/bianxian"
            android:layout_width="1dp"
            android:layout_height="30dp"/>

        <LinearLayout
            android:id="@+id/ll_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_cancel_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:src="@mipmap/yqx1" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_7dp"
                android:gravity="center"
                android:text="已取消"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_cancel_sanjiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_7dp"
                android:paddingTop="2dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/xiala1" />
        </LinearLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_marginTop="@dimen/dimen_11dp"
        android:id="@+id/vp_yongche"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none" />

</LinearLayout>