<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical"
    android:weightSum="1">

    <include layout="@layout/layout_title_primary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/carbuy_banner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/carbuy_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:text="荣威550"
                    android:textColor="@color/text_black"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/carbuy_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="(自动挡)"
                    android:textColor="@color/text_gray" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/bg_white" />

                <TextView
                    android:id="@+id/carbuy_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="15dp"
                    android:text="参考价:15万"
                    android:textColor="@color/text_black" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/carbuy_dongliyuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="动力源 ：纯电动"
                    android:textColor="@color/text_black" />

                <TextView
                    android:id="@+id/carbuy_yanse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="颜色：白"
                    android:textColor="@color/text_black" />

                <TextView
                    android:id="@+id/carbuy_chengshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="所属城市：深圳"
                    android:textColor="@color/text_black" />

                <TextView
                    android:id="@+id/carbuy_chepaihao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="车牌号：粤16789"
                    android:textColor="@color/text_black" />

                <TextView
                    android:id="@+id/carbuy_xingshizhenghao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="行驶证号：1234****7890"
                    android:textColor="@color/text_black" />

                <TextView
                    android:id="@+id/carbuy_chejiahao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="车驾号：1234****7890"
                    android:textColor="@color/text_black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/bianxian" />

                <TextView
                    android:id="@+id/car_buy_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="认购类型：消费型"
                    android:textColor="@color/text_black"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    >

                  <ImageView
                      android:id="@+id/carbuy_shangxian_img"
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:paddingTop="5dp"
                      android:src="@mipmap/warn"
                      />

                    <TextView
                        android:id="@+id/carbuy_shangxian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="温馨提示：您已达到消费型投资数量上限！"
                        android:paddingTop="5dp"
                        android:textColor="@color/text_black"
                        android:gravity="center_vertical"
                        android:textSize="13dp" />

                </LinearLayout>



                <ImageView
                    android:id="@+id/carbuy_timeline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="25dp"
                    android:src="@mipmap/carbuy_timeline3"
                    android:paddingTop="5dp"
                    />

                <LinearLayout
                    android:id="@+id/carbuy_layout_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/carbuy_layout4_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="认购" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/carbuy_layout4_center1_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2018-04-10" />

                        <TextView
                            android:id="@+id/carbuy_layout4_center1_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="首期分红到账" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/carbuy_layout4_center2_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2019-04-10" />

                        <TextView
                            android:id="@+id/carbuy_layout4_center2_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="可解除合同" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/carbuy_layout4_right_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2023-04-10" />

                        <TextView
                            android:id="@+id/carbuy_layout4_right_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="到期结算" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/carbuy_layout_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/carbuy_layout3_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="认购   " />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/carbuy_layout3_center1_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2018-04-10" />

                        <TextView
                            android:id="@+id/carbuy_layout3_center1_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="可解除合同" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/carbuy_layout3_right_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2019-04-10" />

                        <TextView
                            android:id="@+id/carbuy_layout3_right_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="到期结算" />

                    </LinearLayout>


                </LinearLayout>




                <TextView
                    android:id="@+id/carbuy_Surplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:text="剩余份数：3份" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="25dp"
                    >

                    <TextView
                        android:id="@+id/carbuy_hetongyangben"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投资型认购合同样本" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/carbuy_hetongyangben_img"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/gengduo1"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_black"
                    android:layout_marginRight="28dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="认购份数"
                        />
                             <View
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_weight="1"/>
                    <www.qisu666.sdk.partner.widget.AmountView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/amount_view"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="right"
                        android:layout_marginRight="15dp"
                        app:btnTextSize="14sp"
                        app:btnWidth="36dp"
                        app:tvWidth="50dp"/>
                    <View
                        android:layout_width="35dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

            <Button
                android:textColor="@android:color/white"
                android:id="@+id/carbuy_btn_login"
                style="@style/style_btn"
                android:background="@color/not_login"
                android:clickable="false"
                android:text="立即认购" />
            
        </LinearLayout>
        
        
    </ScrollView>

</LinearLayout>