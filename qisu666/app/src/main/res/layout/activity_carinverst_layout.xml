<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/main_background"
    android:layout_height="match_parent">

    <include layout="@layout/layout_title_primary"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="14dp"
                android:layout_width="match_parent"
                android:background="@mipmap/rg_7"
                android:gravity="center_horizontal"
                android:layout_height="169dp">
                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="21dp"
                    android:id="@+id/car_brand"
                    android:text="比亚迪-E5"
                    android:textColor="@color/new_text_gray"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/car_brand"
                    android:background="@drawable/gray_line_shape"
                    android:text="自动挡"
                    android:textSize="@dimen/dimen_13sp"
                    android:paddingTop="1dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:paddingBottom="20dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:paddingRight="15dp"
                android:paddingTop="13dp"
                android:paddingLeft="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@drawable/linear_shape"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/text_white"
                    android:layout_width="wrap_content"
                    android:text="车辆信息"
                    android:textSize="@dimen/dimen_19sp"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/new_text_gray"
                        android:text="动力源"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tx_dl"
                        android:text="纯电动"
                        android:textSize="15sp"
                        android:textColor="@color/text_white"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/new_text_gray"
                        android:text="颜色"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tx_color"
                        android:text=""
                        android:textSize="15sp"
                        android:textColor="@color/text_white"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/new_text_gray"
                        android:text="所属城市"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tx_city"
                        android:text=""
                        android:textSize="15sp"
                        android:textColor="@color/text_white"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/new_text_gray"
                        android:text="车牌号"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tx_carnum"
                        android:text=""
                        android:textSize="15sp"
                        android:textColor="@color/text_white"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/new_text_gray"
                        android:text="行驶证"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tx_driver"
                        android:text=""
                        android:textSize="15sp"
                        android:textColor="@color/text_white"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/new_text_gray"
                        android:text="车驾号信息"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tx_info"
                        android:text=""
                        android:textSize="15sp"
                        android:textColor="@color/text_white"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/new_text_gray"
                        android:text="参考价格"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tx_money"
                        android:text=""
                        android:textSize="18sp"
                        android:textColor="@color/tool_coupon_badge_bg"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:paddingBottom="20dp"
                android:paddingRight="15dp"
                android:paddingTop="13dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="match_parent"
                android:background="@drawable/linear_shape"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tx"
                    android:text="认购类型"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/dimen_19sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/type_img"
                    android:layout_marginTop="@dimen/dimen_3dp"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/rg_16"
                    android:layout_toRightOf="@id/tx"
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="@dimen/dimen_16dp" />
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/tz_re"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/img"
                            android:layout_marginTop="34dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/rg_8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tx_canCancleTime"
                            android:layout_marginTop="15dp"
                            android:layout_below="@id/tx"
                            android:layout_marginLeft="170dp"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/sp_12"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tx_firstPhaseTime"
                            android:layout_marginTop="2dp"
                            android:layout_below="@id/img"
                            android:layout_marginLeft="70dp"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/sp_12"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tx_contractExpiresTime"
                            android:layout_marginTop="2dp"
                            android:layout_below="@id/img"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="4dp"
                            android:layout_marginLeft="70dp"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/sp_12"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/xf_re"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:id="@+id/img_xf"
                            android:layout_marginTop="34dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/rg_9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_below="@id/img_xf"
                            android:id="@+id/xf_canCancleTime"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="@dimen/dimen_112dp"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/sp_12"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginRight="@dimen/dimen_4dp"
                            android:id="@+id/xf_contractExpiresTime"
                            android:layout_marginTop="12dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="70dp"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/sp_12"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:paddingBottom="13dp"
                android:paddingRight="15dp"
                android:paddingTop="13dp"
                android:paddingLeft="15dp"
                android:background="@drawable/linear_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="剩余份数"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tx_surplusNumber"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/text_white"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/re_contract"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:paddingBottom="13dp"
                android:paddingRight="15dp"
                android:paddingTop="13dp"
                android:paddingLeft="15dp"
                android:background="@drawable/linear_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="投资型"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="认购合同样本"
                    android:textSize="15sp"
                    android:textColor="@color/text_white"
                    android:layout_toLeftOf="@+id/enter_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/enter_img"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/jiant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/text_white"
                    android:textSize="15sp"
                    android:text="认购份数"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/img_reduce"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/rg_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tx_number"
                    android:layout_marginRight="5dp"
                    android:background="@color/text_white"
                    android:textColor="@color/main_background"
                    android:textSize="18sp"
                    android:text="0"
                    android:gravity="center"
                    android:layout_width="45dp"
                    android:layout_height="25dp" />
                <ImageView
                    android:id="@+id/img_add"
                    android:src="@mipmap/rg_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:id="@+id/submit"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="30dp"
                android:text="立即认购"
                android:gravity="center"
                android:textSize="@dimen/dimen_21sp"
                android:paddingBottom="@dimen/dimen_11dp"
                android:paddingTop="@dimen/dimen_11dp"
                android:background="@drawable/selector_primary_btn"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="38dp"
                android:textColor="@color/main_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>