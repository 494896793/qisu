<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_70dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_7dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_8dp"
        android:background="@mipmap/xiala_bg"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">


        <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@mipmap/gfwx" />-->

        <TextView
            android:id="@+id/tv_gongxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/gxcd"
            android:gravity="center"
            android:text="共享充电"
            android:textColor="@color/main_background"
            android:textSize="15sp" />

        <View
            android:id="@+id/lines_two"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:background="@color/new_gray"
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
             />


        <TextView
            android:id="@+id/tv_guanfang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/gfwx"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:gravity="center"
            android:text="官方微信"
            android:textColor="@color/main_background"
            android:textSize="15sp" />

        <View
            android:id="@+id/lines_one"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:background="@color/new_gray"
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
             />


        <TextView
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:id="@+id/tv_xiaoxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/xtxx"
            android:gravity="center"
            android:text="系统消息"
            android:textColor="@color/main_background"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>