<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/main_background"
    android:paddingTop="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:layout_height="wrap_content">


    <LinearLayout
        android:background="@drawable/car_list_item"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="11dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:id="@+id/icon"
                android:src="@mipmap/yc_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:lines="1"
                android:maxEms="11"
                android:ellipsize="end"
                android:id="@+id/addresss_tx"
                android:textColor="@color/text_white"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/icon"
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/distance_tx"
                android:textColor="@color/new_text_gray"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:text="距离"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">
            <RelativeLayout
                android:background="@drawable/white_drawable"
                android:id="@+id/car_re"
                android:layout_width="132dp"
                android:layout_height="140dp">
                <ImageView
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/elect_img"
                    android:src="@mipmap/yc_47"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/elect_tx"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="9dp"
                    android:layout_toRightOf="@id/elect_img"
                    android:textColor="@color/main_background"
                    android:textSize="@dimen/sp_12"
                    android:text="60%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="18dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/yc_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginBottom="8dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/car_img"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginBottom="23dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:text="aaaaaa"
                    android:id="@+id/car_name"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/new_text_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_toRightOf="@id/car_re"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/first_linear"
                    android:layout_marginTop="16dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/car_brand"
                        android:textColor="@color/text_white"
                        android:textSize="18sp"
                        android:text="比亚迪"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/car_people_num"
                        android:layout_marginLeft="13dp"
                        android:text="5座"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:textColor="#FF6E717B"
                        android:background="@drawable/tx_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/candriver_tx"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/first_linear"
                    android:layout_marginLeft="13dp"
                    android:text="可行驶距离"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:textColor="#FF6E717B"
                    android:background="@drawable/tx_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_marginBottom="15dp"
                    android:id="@+id/submit_re"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="19dp"
                    android:gravity="center"
                    android:background="@drawable/selector_primary_btn"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginRight="7dp"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@mipmap/yd_44" />
                        <TextView
                            android:textSize="15sp"
                            android:text="导航前往"
                            android:textColor="@color/text_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>