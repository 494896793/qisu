<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="www.qisu666.com.activity.ChooseBrandActivity"
    android:orientation="vertical"
    android:background="@color/bg_white">

    <include layout="@layout/layout_title_primary" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_brand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="#0000"
            android:layout_marginLeft="@dimen/default_margin_lnr"
            android:divider="@null"
            android:layout_toLeftOf="@+id/lv_letter"
            android:scrollbars="none"></ListView>

        <ListView
            android:id="@+id/lv_letter"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:listSelector="#0000"
            android:divider="@null"
            android:layout_alignParentRight="true"
            android:scrollbars="none"></ListView>

    </RelativeLayout>

</LinearLayout>
