<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/main_background"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/white_shape"
        android:layout_width="match_parent"
        android:layout_height="145dp">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginLeft="22dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tx_totalProfit"
                android:textColor="@color/orange"
                android:textSize="36sp"
                android:text="100.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/money_title"
                android:layout_marginTop="14dp"
                android:textSize="13sp"
                android:text="投资累计收益（元）"
                android:textColor="@color/new_text_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tx_totalSubscribeCount"
                android:text="5"
                android:textSize="36sp"
                android:textColor="@color/main_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/new_text_gray"
                android:text="投资中（份）"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:text="投资日程"
        android:textColor="@color/text_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="vertical"
        android:background="@drawable/tx_radio"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/xf_re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="本月可抵扣额度"
                android:textColor="@color/text_white"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tx_tz"
                android:text="60元"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_white"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/tz_re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="本月已到账收益"
                android:textColor="@color/text_white"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tx_monthProfit"
                android:text="60元"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_white"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/tz_re2"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="本月待到账收益"
                android:textColor="@color/text_white"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tx_receiveMonthProfit"
                android:text="60元"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_white"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_marginBottom="9dp"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/text_white"
        android:textSize="18sp"
        android:text="投资明细"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>