<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/main_background"
    android:layout_height="match_parent">

    <include layout="@layout/layout_title_primary"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="fitXY"
                android:src="@mipmap/rg_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="33dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/rg_2"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/view_tz"
                    android:layout_marginLeft="195dp"
                    android:layout_marginTop="38dp"
                    android:layout_width="50dp"
                    android:layout_height="40dp"  />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/rg_3"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/view_hh"
                    android:layout_marginLeft="195dp"
                    android:layout_marginTop="25dp"
                    android:layout_width="50dp"
                    android:layout_height="40dp"  />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/agree_linear"
                android:layout_marginTop="27dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/agree_check"
                    style="@style/CustomCheckBoxTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/read_tx"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="14sp"
                    android:text="我已阅读并同意（奇速合伙人协议）"
                    android:textColor="@color/text_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:id="@+id/submit"
                android:layout_marginTop="60dp"
                android:textSize="@dimen/dimen_21sp"
                android:paddingBottom="@dimen/dimen_11dp"
                android:paddingTop="@dimen/dimen_11dp"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="38dp"
                android:gravity="center"
                android:textColor="@color/main_background"
                android:text="前往认购"
                android:background="@drawable/selector_primary_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>